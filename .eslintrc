{
  "plugins": [
    "ramda",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:ramda/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "printWidth": 65,
        "parser": "flow",
        "semi": false
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-console": 0,
    "no-debugger": 1,
    "no-unused-vars": 1
  }
}